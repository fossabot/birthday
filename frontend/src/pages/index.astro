---
import AppClock from '~components/AppClock.vue'
import BaseLayout from '~layouts/BaseLayout.astro'
import BirthdayContent from '~components/BirthdayContent.vue'

import { fetchBirthdayNotificationServer } from '~utils/backend'

const response: BirthdayData[] = await fetchBirthdayNotificationServer(
  'list'
).then((response) => response.json())
---

<BaseLayout>
  <AppClock client:only />
  <BirthdayContent client:only options={response} />
</BaseLayout>
